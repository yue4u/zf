#!/usr/bin/env zx
import path from "path";

cd(path.join(__dirname, ".."));

const dry = process.argv.includes("-n") ? "-n" : "";
const ignore = [
  `\.git`,
  `devlog/node_modules`,
  `devlog/dist`,
  `tmp`,
  `zf/\.import`,
  `target`,
].join("|");

$`gsutil -m rsync -d -r ${dry} -x ${ignore} . gs://zf.yue.rocks 2> >(rg -v "Skipping symlink")`;
